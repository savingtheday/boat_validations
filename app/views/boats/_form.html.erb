  </div>
  <div class="field">

    <%= f.label :location %><br><p>(Please choose from: PHL, NYC or CAM)</p>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :bname %><br>
    <%= f.text_field :bname %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
