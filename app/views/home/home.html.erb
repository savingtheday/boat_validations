<% if current_user %>

    <% @boats.each do |boat| %>
      <%= boat.bname %>
      <%= boat.containers %>
      <%= boat.location %>
    <% end %>

    <% @jobs.each do |job| %>
      <%= job.name %>
      <%= job.containers_needed %>
      <%= job.location %>
      <%= job.cargo %>
      <%= job.origin %>
      <%= job.job_cost %>
      <%= job.destination %>
      <%= job.job_name %>
      <%= job.boat.name %>
      
    <% end %>
    <br>
<%= link_to "sign out", destroy_user_session_path, :method => :delete if current_user %>
    <%else%>
<%= link_to "sign in", 'users/sign_in' %>

<% end %>


